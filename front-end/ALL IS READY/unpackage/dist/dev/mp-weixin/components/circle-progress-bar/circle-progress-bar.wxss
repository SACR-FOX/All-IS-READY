.circle-progress-bar {
  border-radius: 50%;
  overflow: hidden;
  position: relative;
}
.content, .bar {
  height: 100%;
  width: 100%;
}
.content {
  border-radius: 50%;
  overflow: hidden;
  position: relative;
  z-index: 5;
}
.inner {
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.bar, .mask, .back, .point {
  position: absolute;
}
.bar {
  top: 0rpx;
  left: 0rpx;
}
.mask, .back {
  top: 0rpx;
  width: 50%;
  height: 100%;
}
.n1 {
  right: 0rpx;
  -webkit-transform-origin: 0% 50%;
          transform-origin: 0% 50%;
  z-index: 2;
}
.n2 {
  left: 0rpx;
  z-index: 1;
}
.point {
  z-index: 3;
  top: 0rpx;
  border-radius: 50%;
}
.bar.animate, .bar.animate .mask, .bar.animate .back, .bar.animate .point {
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}

